{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"categories": {
		"correctness": "error",
		"suspicious": "warn"
	},
	"rules": {
		"no-shadow": "off",
		"unicorn/require-post-message-target-origin": "off",
		"unicorn/prefer-add-event-listener": "off"
	},
	"overrides": [
		{
			"files": ["**/e2e/**", "**/tests/**"],
			"rules": {
				"typescript/no-explicit-any": "off"
			}
		}
	]
}
