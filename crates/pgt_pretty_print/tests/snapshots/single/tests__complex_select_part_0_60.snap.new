SELECT
  contype::text AS contype,
  conname,
  array_length(
    conkey,
    1
  ) AS ncol,
  conrelid AS resorigtbl,
  col AS resorigcol,
  ord
FROM
  pg_constraint
  LEFT JOIN
    LATERAL unnest(
      conkey
    ) WITH ORDINALITY AS _(col, ord) ON TRUE
WHERE contype IN ('p', 'f')
UNION
SELECT
  concat(
    contype,
    '_ref'
  ) AS contype,
  conname,
  array_length(
    confkey,
    1
  ) AS ncol,
  confrelid,
  col,
  ord
FROM
  pg_constraint
  LEFT JOIN
    LATERAL unnest(
      confkey
    ) WITH ORDINALITY AS _(col, ord) ON TRUE
WHERE contype = 'f';
